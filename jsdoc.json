{
  "source": {
    "include": ["lib", "routes", "databases", "schemas"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs/|tests)"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "recurse": true,
    "destination": "./docs/"
  }
}
